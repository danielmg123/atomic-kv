Checks: >
  clang-analyzer-*,
  bugprone-*,
  performance-*,
  modernize-*,
  -clang-analyzer-unix.BlockInCriticalSection
WarningsAsErrors: ''
HeaderFilterRegex: '^(src|include)/'
FormatStyle: none
ExtraArgs: [
  "-isysroot", "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk",
  "-stdlib=libc++",
  "-Ibuild/vcpkg_installed/arm64-osx/include"
]
CheckOptions:
  - key: modernize-use-trailing-return-type.IgnoreMainLikeFunctions
    value: true